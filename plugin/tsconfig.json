{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2021",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": ["DOM", "ES2021"]
    },
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": ["**/globals.d.ts", "**/*.js", "**/*.svelte", "**/*.ts"]
}
